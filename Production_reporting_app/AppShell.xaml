<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Production_reporting_app.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Production_reporting_app.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Production_reporting_app">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:AddStop}"
        Route="AddStop" />
    <ShellContent
    Title="Dashboard"
    ContentTemplate="{DataTemplate local:Dashboard}"
    Route="Dashboard" />

</Shell>
